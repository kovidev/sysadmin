#!/usr/bin/env bash

# subversion mirror initializer

# exit immediately if any error occurs
set -e

progname=$(basename $0)

usage() {
    echo "Usage: $progname REPOSITORY"
}

help() {
    echo "Subversion mirror initializer"
    echo ""
    usage
    echo ""
    echo "Options:"
    echo "  -h, --help          display this help and exit"
}

# parse options
eval set -- $(getopt -o h --long help -n $progname -- $@)
while true; do
    case "$1" in
        -h|--help) shift; help; exit 0;;
        --) shift; break;;
    esac
done

if [ -z "$1" ]; then
    usage >&2
    exit 1
fi

REPO=$1
HOOKS="/etc/svn-mirror/hooks"
DIR=$(dirname $(realpath -s ${BASH_SOURCE}))
MIRROR="file://$PWD/$REPO"
SOURCE="svn://dev.kovi.com/$REPO"

cleanup() {
    if [ -e "$REPO" ]; then
        read -p "$REPO already exists. Delete it? (y/n) " -n 1
        echo ""
        if [[ $REPLY =~ ^[Yy]$ ]]; then
            rm -rf "$REPO"
        else
            exit 1
        fi
    fi
}

# Check that $SOURCE is there first
svn ls $SOURCE >/dev/null &&
    cleanup &&
    svnadmin create $REPO &&
    cp -R $HOOKS $REPO &&
    svnsync init $MIRROR $SOURCE
